{% extends 'default/layout.html.twig' %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{asset('js/calculator/Validation.js')}}"></script>
	<script src="{{asset('js/calculator/Calculation.js')}}"></script>
	<script src="{{asset('js/calculator/index.js')}}"></script>
{% endblock %}

{% block content %}
	<div class="container jumbotron">
		<div class="row">
			<div class="col-xs-12 box">
				<h1>Kalkulator działań pisemnych</h1>
				<p>{{ page.content }}</p>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12 col-md-6" id="result"></div>
			<div class="col-xs-12 col-md-6" id="form">
				<div id="calculator" class="form-horizontal">
					<div class="col-xs-12 col-sm-8">
						<div class="form-group col-xs-12">
								<input class="form-control" type="text" name="first" placeholder="Pierwsza liczba"/>
						</div>
						<div class="form-group col-xs-12">
								<input class="form-control" type="text" name="second" placeholder="Druga liczba"/>
						</div>
					</div>
					<div class="col-xs-12 col-sm-4">
						<div class="form-group">
							<button type="button" class="btn btn-success" id="add"><span class="glyphicon glyphicon-plus"></span></button>
						</div>
					</div>
				</div>
			</div>			
		</div>
	</div>
{% endblock %}