{% extends 'default/layout.html.twig' %}

{% block content %}
	<div class="container jumbotron">
		<div class="row">
			<div class="col-xs-12 box">
				<h1>Kalkulator działań pisemnych</h1>
				<p>{{ page.content }}</p>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12 col-md-6" id="result">
				<table><tr><td></td><td></td><td style="display: table-cell;">1</td><td></td><td style="display: table-cell;">1</td><td></td></tr><tr><td></td><td></td><td></td><td style="display: table-cell;">4</td><td style="display: table-cell;">6</td><td style="display: table-cell;">7</td></tr><tr><td style="display: table-cell;">+</td><td></td><td style="display: table-cell;">5</td><td style="display: table-cell;">6</td><td style="display: table-cell;">2</td><td style="display: table-cell;">3</td></tr><tr class="border_top" style="display: table-row; color: black;"><td></td><td></td><td style="display: table-cell;">6</td><td style="display: table-cell;">0</td><td style="display: table-cell;">9</td><td style="display: table-cell;">0</td></tr></table>
