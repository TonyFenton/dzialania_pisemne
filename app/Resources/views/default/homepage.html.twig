			<div class="col-xs-12 col-md-6" id="form">
				<div id="calculator" class="form-horizontal">
					<div class="col-xs-12 col-sm-8">
						<div class="form-group col-xs-12">
								<input class="form-control" type="text" name="first" placeholder="Pierwsza liczba"/>
						</div>
						<div class="form-group col-xs-12">
								<input class="form-control" type="text" name="second" placeholder="Druga liczba"/>
						</div>
					</div>
					<div class="col-xs-12 col-sm-4">
						<div class="form-group">
							<button type="button" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span></button>
						</div>
					</div>
				</div>
			</div>			
		</div>
	</div>
{% endblock %}